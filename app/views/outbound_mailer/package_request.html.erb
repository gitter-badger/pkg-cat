<div style="font-family: monospace;">
  <% if @email.body.present?  %>
    <div><%= @email.body %> </div>
  <% end %>
  
  <p><%= @package.author %></p>
  <p><%= @package.bio %></p>

  <% if @package.twitter? %>
    <%= link_to "twitter", "http://twitter.com/#{@package.twitter}" %> | 
  <% end %>

  <% if @package.github? %>
    <%= link_to "github", "http://github.com/#{@package.github}" %> | 
  <% end %>

  <% if @package.blog? %>
    <%= link_to "blog", @package.blog %>
  <% end %>

  <p>PACKAGE DESCRIPTION</p>
  <p><%= @package.description %></p>

  <%= render @links %>
</div>
