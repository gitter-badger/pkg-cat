<%= form_for @package do |form| %>
  <%= render "error", package: @package %>

  <div>
    <%= form.label :email %>
    <p class="form-description">
    An email confirmation and edit link will be sent to this address. There 
    will not be a chance to edit this address after creating your package.
    </p>
    <%= form.text_field :email %>
  </div>

  <%= render "form", form: form %>

  <div>
    <%= form.submit "CREATE PACKAGE" %>
  </div>
<% end %>
